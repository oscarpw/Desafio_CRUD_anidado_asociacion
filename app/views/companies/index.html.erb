<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad de empleados</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.employees.count %></td>
        <td><%= link_to 'Mostrar', company, class: "btn btn-info text-light" %></td>
        <td><%= link_to 'Editar', edit_company_path(company), class: "btn btn-secondary text-light" %></td>
        <td><%= link_to 'Borrar', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

